{% extends 'base.html.twig' %}

{% block title %}Hello GeneratePdfController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="home show">
		<img class="bg" src="{{ asset('images/bg.png') }}" alt="Convert.io" class="home__img"/>

		<div class="container__show">
			<div class="container__info__show container__info__show__text">
				<h1>{{ pdf.title }}</h1>
				<p class="container__info__show">Generated at:
					{{ pdf.createdAt|date('Y-m-d H:i:s') }}</p>

				<a class="download" href="{{ asset(pdf.path) }}" download>Download PDF
					<img class="download__img" src="{{ asset('images/download.svg') }}" alt="Convert.io" class="download"/></a>
			</div>
			<div class="container__info__show">
				<embed src="{{ asset(pdf.path) }}" type="application/pdf" width="100%" height="600px"/>
			</div>
		</div>
	</div>
{% endblock %}
